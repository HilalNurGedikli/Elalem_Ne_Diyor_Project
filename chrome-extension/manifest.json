{
  "manifest_version": 3,
  "name": "Elalem Ne Diyor - Site Analytics",
  "version": "1.0.0",
  "description": "Web sitelerindeki kullanıcı yorumlarını analiz eden Chrome extension'ı",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "nativeMessaging"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Elalem Ne Diyor",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
